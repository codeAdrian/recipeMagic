{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es7", "dom"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve"
    },
    "exclude": [
        "src/stories",
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        ".storybook"
    ],
    "include": ["src"]
}
